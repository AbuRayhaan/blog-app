<div>
  <%= render 'partials/user' %>
</div>
<div class="post_container d_flex">
  <% @posts.each do |i|%>
    <div class="post_details">
      <h3><%= link_to i.title, user_post_path(@user.id, i) %></h3>
      <p><%= i.text %></p>
    </div>

    <div class ="post_comment">
      <% if i.comments.empty? %>
        <p>0 Comment</p>
      <% else %>
        <% i.recent_comments.each do |idx| %>
          <p><%= idx.author.name %> : <%= idx.text %></p>
        <% end %>
      <% end %>
    </div>
  <% end %>
</div>

<button class="see-all">Pagination</button>