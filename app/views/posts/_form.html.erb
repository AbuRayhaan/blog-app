<div>
  <%= form_for @post, url: user_posts_path do |form| %>
    <div id="error_handler">
      <% if @post.errors.any? %>
        <h2>
          <%= pluralize(@post.errors.count, "error") %> Unable to save!
        </h2>
        <ul>
          <% @post.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
    <% end %>

    <div class = "new_post d_flex">
      <%= form.label :title %>
      <%= form.text_field :title, placeholder: 'Article title' %>
      <%= form.text_field :text, size: "50x100", placeholder: "Add article description" %>
      <%= form.submit "Post" %>
    </div>

  <% end %>
</div>

