<h1>User Show Page</h1>
<div>
  <section class="user_header">
    <%= image_tag @user.photo, size: "160x90", alt: "Profile Picture"%>
    <div>
      <h1><%= link_to @user.name %></h1>
      <p>Number of posts: <%= @user.post_counter %></p>
    </div>
  </section>

  <section class="user_bio">
    <h3>Bio</h3>
    <p><%= @user.bio %></p>
  </section>

  <section class="user_post">
    <% @user.posts.each_with_index do |post, idx|%>
      <div>
        <h3>Post#<%=idx%>: <%= post.title %> </h3>
        <p><%= post.text %></p>
      </div>
    <% end %>
  </section>
</div>